{
	"name": "personalwebsite",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/danielp1218/danielpu.dev.git"
	},
	"workspaces": [
		"packages/**"
	],
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@vercel/blob": "^2.0.0",
		"pixel-profile": "workspace:*",
		"pixel-profile-server": "workspace:*",
		"pixel-profile-utils": "workspace:*"
	},
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "bun run build:packages && vite build",
		"build:packages": "bun run --cwd packages/utils build && bun run --cwd packages/pixel-profile build && bun run --cwd packages/pixel-profile-server build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier . --write",
		"lint": "eslint .",
		"upload:blobs": "bun run scripts/storeBlobs.ts"
	},
	"type": "module"
}
